{
  "name": "Social Login FastAPI Dev Container",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "docker-compose.override.yml"
  ],
  "service": "social-login-google",                       // must match the service name in docker-compose.yml
  "workspaceFolder": "/app",                  // inside container
  "shutdownAction": "stopCompose",

  // VS Code extensions automatically installed in the container
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker"
      ]
    }
  },

  "remoteUser": "root"                        // or your user if you set one
}
